@using Umbraco.Cms.Web.Common.PublishedModels
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.HomePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    Layout = "main.cshtml";
}

<!-- Hero Section -->
<section class="bg-white py-24">
    <div class="max-w-7xl mx-auto px-6 lg:px-8 text-center">
        <h1 class="text-5xl font-extrabold tracking-tight text-gray-900 mb-6">@Model.Value("title")</h1>
        <p class="mt-4 text-xl text-gray-600 max-w-2xl mx-auto">
            @Model.Value("heroBeskrivelse")
        </p>
        <div class="mt-8">
            <a href="/products"
                class="inline-block px-6 py-3 text-white bg-blue-600 hover:bg-blue-700 rounded-lg shadow transition">Se
                Produkter</a>
        </div>
    </div>
</section>

<!-- Features Grid -->
<section class="bg-gray-50 py-20">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">@Model.Value("hvorforVLgeOs")</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
            <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition">
                <div class="text-blue-600 text-3xl mb-4">🚀</div>
                <h3 class="text-xl font-semibold mb-2">Hurtig levering</h3>
                <p class="text-gray-600">Vi sørger for hurtig og pålidelig levering – altid til tiden.</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition">
                <div class="text-green-600 text-3xl mb-4">🔒</div>
                <h3 class="text-xl font-semibold mb-2">Sikker betaling</h3>
                <p class="text-gray-600">Dine oplysninger er sikre med os. Betal trygt online.</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition">
                <div class="text-yellow-500 text-3xl mb-4">💬</div>
                <h3 class="text-xl font-semibold mb-2">God kundeservice</h3>
                <p class="text-gray-600">Vi er her for dig – før, under og efter dit køb.</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Sektion -->
<section class="bg-gradient-to-r from-indigo-500 from-10% via-sky-500 via-30% to-emerald-500 to-90% text-white py-16">
    <div class="max-w-7xl mx-auto px-6 text-center">
        <h2 class="text-3xl font-bold mb-4">Klar til at komme i gang?</h2>
        <p class="text-lg mb-6">Gennemse vores udvalg af produkter og find det perfekte til dig.</p>
        <a href="/products"
            class="inline-block bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition">Gå
            til Produkter</a>
    </div>
</section>
